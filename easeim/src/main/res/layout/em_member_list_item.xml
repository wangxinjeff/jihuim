<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/member_item_height"
    android:gravity="center_vertical"
    android:paddingStart="@dimen/member_item_start_padding">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/member_item_avatar"
        android:layout_width="@dimen/member_item_avatar_size"
        android:layout_height="@dimen/member_item_avatar_size"
        android:src="@drawable/ease_group_icon"
        />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/member_item_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="name"
        android:lines="1"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:textColor="?attr/normalTextColor"
        android:textSize="@dimen/em_size_normal" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/member_item_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/em_icon_member_owner"
        android:layout_marginStart="5dp"
        android:visibility="gone"
        />

</LinearLayout>