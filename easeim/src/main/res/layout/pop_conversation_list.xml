<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popup_win_bg"
    >

    <LinearLayout
        android:id="@+id/notify_view"
        android:layout_width="136dp"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:background="@drawable/pop_item_selector"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/notify_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_message_notify"
            android:layout_marginStart="16dp"
        />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/em_message_notify"
            android:textSize="@dimen/em_size_normal"
            android:textColor="?attr/normalTextColor"
            android:layout_marginStart="8dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/search_view"
        android:layout_width="136dp"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:background="@drawable/pop_item_selector"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_search_group"
            android:layout_marginStart="16dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/em_search_group"
            android:textSize="@dimen/em_size_normal"
            android:textColor="?attr/normalTextColor"
            android:layout_marginStart="8dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/create_view"
        android:layout_width="136dp"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:background="@drawable/pop_item_selector"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_create_group"
            android:layout_marginStart="16dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/em_create_group"
            android:textSize="@dimen/em_size_normal"
            android:textColor="?attr/normalTextColor"
            android:layout_marginStart="8dp"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/apply_view"
        android:layout_width="136dp"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:background="@drawable/pop_item_selector"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/icon_group_apply"
            android:layout_marginStart="16dp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/em_group_apply"
            android:textSize="@dimen/em_size_normal"
            android:textColor="?attr/normalTextColor"
            android:layout_marginStart="8dp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/apply_unread_icon"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/em_icon_red_badge"
            android:layout_marginStart="@dimen/margin_small"
            android:visibility="gone"
            />

    </LinearLayout>


</LinearLayout>