<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:gravity="center_vertical"
    android:background="?attr/themeFloatBgColor"
    >
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/member_item_avatar_size"
        android:layout_height="@dimen/member_item_avatar_size"
        android:src="@drawable/ease_default_avatar"
        android:layout_marginStart="16dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="?attr/normalTextColor"
        android:textSize="@dimen/em_size_normal"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_remove_mute"
        android:layout_width="58dp"
        android:layout_height="28dp"
        android:background="@drawable/agree_btn_bg"
        android:text="@string/em_group_remove_mute"
        android:textSize="@dimen/em_size_normal"
        android:textColor="@color/white"
        android:layout_marginEnd="16dp"
        />

</LinearLayout>