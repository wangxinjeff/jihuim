<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:background="?attr/themeBgColor"
    android:layout_width="match_parent"
    android:layout_height="@dimen/em_common_title_bar_height"
    android:gravity="center_vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:popupTheme="@style/Toolbar.PopupTheme"/>

    <RelativeLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="50dp"
        >

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            tools:src="@drawable/icon_back"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        >
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"

        android:textColor="?attr/normalTextColor"
        android:textSize="@dimen/em_toolbar_title_size"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="标题"/>

    <TextView
        android:id="@+id/conversation_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/em_size_small"
        android:textColor="?attr/conGroupIdColor"
        android:layout_marginTop="3dp"
        android:visibility="gone"
        />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:minWidth="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:foreground="@drawable/ease_ripple_click_gray">

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/right_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:textSize="@dimen/em_size_normal"
            android:maxLines="1"
            android:maxLength="10"
            android:textColor="?attr/normalTextColor"/>

    </RelativeLayout>

</RelativeLayout>